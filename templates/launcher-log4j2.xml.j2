<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Appenders>

        <RollingFile name="FILEOUT" filePattern="{{ HOME }}/logs/launcher/denodo-launcher-%d{yyyy-MM-dd}.log">
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </Console>

    </Appenders>

    <Loggers>

        <Logger name="com.denodo" level="ERROR" />
		
		<Logger name="org.apache.commons.betwixt" level="ERROR" />

		<Logger name="org.apache.commons.digester" level="ERROR" />

		<Logger name="org.apache.commons.beanutils" level="ERROR" />

        <Root level="ERROR">
            <AppenderRef ref="FILEOUT" />
        </Root>

    </Loggers>

</Configuration>
