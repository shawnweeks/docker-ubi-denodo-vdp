<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>

    <RollingFile name="FILEOUT" filePattern="{{ HOME }}/logs/denodo-tls-configurator/denodo-tls-configurator-%d{yyyy-MM-dd}.log">
      <Policies>
	    <TimeBasedTriggeringPolicy />
      </Policies>
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </RollingFile>

  </Appenders>

  <Loggers>

    <Logger name="com.denodo" level="error" />

    <Root level="error">
      <AppenderRef ref="FILEOUT" />
    </Root>

  </Loggers>

</Configuration>
