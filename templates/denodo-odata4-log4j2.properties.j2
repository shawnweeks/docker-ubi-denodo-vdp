log4j.rootLogger                = ERROR, stdout, fout

log4j.appender.stdout           = org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout    = org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d %5p [%c{1}] (%F:%L) - %m%n

log4j.logger.com.denodo=ERROR

log4j.appender.fout             = org.apache.log4j.FileAppender
log4j.appender.fout.File        = {{ HOME }}/logs/apache-tomcat/denodo-odata4-service.log
log4j.appender.fout.layout      = org.apache.log4j.PatternLayout
log4j.appender.fout.layout.ConversionPattern=%d %5p [%c{1}] (%F:%L) - %m%n
